{
    "openapi": "3.0.3",
    "info": {
      "title": "Basic auth test manifest",
      "version": "1.0.0",
      "description": "Helloworld to test basic-auth"
    },
    "servers": [
      {
        "url": "https://httpbingo.org",
        "description": "Demo basic auth"
      }
    ],
    "paths": {
      "/basic-auth/{user}/{password}": {
        "get": {
          "summary": "basic auth",
          "description": "basic auth",
          "operationId": "getTranscriptByExecutionId",
          "parameters": [
            { "name": "user", "in": "path", "description": "userId", "required": true, "schema": { "type": "string" } },
            { "name": "password", "in": "path", "description": "password", "required": true, "schema": { "type": "string" } }
          ],
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "authenticated": { "type": "boolean" },
                      "user": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  