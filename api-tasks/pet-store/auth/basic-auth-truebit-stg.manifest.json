{
  "openapi": "3.0.3",
  "info": {
    "title": "Task Execution API <ts>",
    "version": "1.45.0",
    "description": "The Task Execution API exposes your Truebit Task as an HTTP-based web service.<br>\n          To run a Function or API Task, you call the execute or execute async endpoints and specify the Task ID, task inputs, and task metadata.<br>\n          Use the status endpoint to poll for outputs of asynchronous or long-running tasks.",
    "contact": { "email": "programs@truebit.io" }
  },
  "servers": [{ "url": "https://stg.go.truebit.network" }],
  "paths": {
    "/task/api/execution-status/{executionId}": {
      "get": {
        "tags": ["Truebit Execution API"],
        "summary": "Returns execution status and result",
        "description": "Returns a Function Task result and status based on a given executionId.\n\n  It's useful when doing a task asynchronously or if it takes more than 60 seconds to finish.",
        "operationId": "getTranscriptByExecutionId",
        "parameters": [{ "name": "executionId", "in": "path", "description": "executionId", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    { "$ref": "#/components/schemas/ExecuteTaskSyncResponse" },
                    { "$ref": "#/components/schemas/ExecuteTaskUnResolvedAsyncResponse" },
                    { "$ref": "#/components/schemas/ExecuteTaskInvalidExecutionIdResponse" }
                  ]
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/UnauthorizedError" }
        }
      }
    }
  },
  "components": {
    "responses": {
      "UnauthorizedError": {
        "description": "Authentication information is missing or invalid",
        "headers": { "WWW-Authenticate": { "schema": { "type": "string" } } }
      }
    },
    "schemas": {
      "MessageResponse": { "properties": { "message": { "type": "string" } } },
      "ExecuteTaskSyncResponse": {
        "type": "object",
        "properties": {
          "executionId": { "type": "string" },
          "clearTextSolution": {
            "type": "object",
            "properties": {
              "output": { "type": "string" },
              "status": { "type": "string" },
              "senderAddress": { "type": "string" },
              "signature": {
                "type": "object",
                "properties": {
                  "v": { "type": "integer" },
                  "r": { "type": "string" },
                  "s": { "type": "string" }
                }
              }
            }
          },
          "status": { "type": "string" }
        }
      },
      "ExecuteTaskAsyncResponse": { "type": "object", "properties": { "executionId": { "type": "string" } } },
      "ExecuteTaskUnResolvedAsyncResponse": {
        "type": "object",
        "properties": { "executionId": { "type": "string" }, "status": { "type": "string" } }
      },
      "ExecuteTaskInvalidExecutionIdResponse": { "type": "object", "properties": { "message": { "type": "string" } } }
    }
  }
}
